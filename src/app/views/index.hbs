<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            <h1>Tasks</h1>
        </div>
        <div class="card-body">
            <form action="/new-contact" method="POST">
                <div class="form-group">
                    <input type="text" name="firstname" placeholder="Firstname" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="lastname" placeholder="Lastname" class="form-control">
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="E-mail" class="form-control">
                </div>
                <div class="form-group">
                    <input type="number" name="phone" placeholder="Phone" class="form-control">
                </div>
                <button class="btn btn-primary btn-block">
                    Add
                </button>
            </form>
        </div>
    </div>
</div>
<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            <h1>Tasks</h1>
        </div>
        <div class="card-body">
            {{#if contactos}}
            <ul class="list-group">
                {{#each contactos}}
                    <li class="list-group-item d-flex justify-content-between aling-items-center">
                        {{firstname}} {{lastname}}, {{email}}, {{phone}} <a href="/delete-contac/{{@key}}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                    </li>
                {{/each}}
            </ul>
            {{else}}
                <h1>No Hay Contactos</h1>
            {{/if}}
        </div>
    </div>
</div>